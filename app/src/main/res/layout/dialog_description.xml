<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainBack">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_alignStart="@id/tv_description"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_title"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border2"
        android:gravity="center"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:hint="There is no description for this book..." />

    <Button
        android:id="@+id/btn_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_description"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/button_border2"
        android:drawableLeft="@drawable/baseline_keyboard_backspace_black_18dp"
        android:paddingHorizontal="80dp"
        android:text="back" />


</RelativeLayout>