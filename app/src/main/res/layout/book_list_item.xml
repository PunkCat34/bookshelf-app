<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/button_border"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.66"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/book_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:src="@drawable/bookingt"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.34"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="17dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="The Lord Of The Rings"
            android:paddingEnd="10dp" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Author: J.R.R Tolkien"
            android:paddingStart="5dp"
            android:paddingEnd="10dp" />

        <TextView
            android:id="@+id/book_publisher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Publisher: Wallflower Press"
            android:paddingStart="5dp"
            android:paddingEnd="10dp" />

        <TextView
            android:id="@+id/book_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Year: 2006"
            android:paddingStart="5dp"
            android:paddingEnd="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="2dp"
            android:layout_marginTop="3dp"
            android:paddingEnd="10dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_border2"
                android:drawableLeft="@drawable/baseline_description_black_18dp"
                android:paddingHorizontal="25dp"
                android:gravity="center"
                android:text="DESC" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_border2"
                android:drawableLeft="@drawable/baseline_save_alt_black_18dp"
                android:paddingHorizontal="25dp"
                android:gravity="center"
                android:text="SAVE" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>