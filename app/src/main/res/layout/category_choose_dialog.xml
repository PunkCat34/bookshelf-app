<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:paddingBottom="50dp"
    android:background="@color/colorMainBack">

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/category_spinner"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="sans-serif-medium"
        android:text="Category"
        android:textSize="23sp" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tv_category"
        android:background="@drawable/spinner_style2"/>

    <Button
        android:id="@+id/category_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_spinner"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="70dp"
        android:background="@drawable/button_border2"
        android:drawableLeft="@drawable/baseline_save_black_18dp"
        android:textSize="17sp"
        android:text="SAVE"/>

</RelativeLayout>